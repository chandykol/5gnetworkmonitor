<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/display"
    android:padding="16dp">

    <!-- Title at top -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Network Shift Alert"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <!-- Central Image/Logo (Cell Tower) -->
    <ImageView
        android:id="@+id/imgAppLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/txtTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@mipmap/display"
        android:contentDescription="Network Shift Alert Logo"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"/>

    <!-- 4G Alert Button (Circular, Left) -->
    <Button
        android:id="@+id/btn4GAlert"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/imgAppLogo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="4G\nAlert"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/circular_button_selector"
        android:gravity="center"
        android:padding="8dp"/>

    <!-- 5G Alert Button (Circular, Right) -->
    <Button
        android:id="@+id/btn5GAlert"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/imgAppLogo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="5G\nAlert"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/circular_button_selector"
        android:gravity="center"
        android:padding="8dp"/>

    <!-- Start and Stop Buttons Row -->
    <LinearLayout
        android:id="@+id/btnRowStartStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn4GAlert"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Start"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button_selector"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btnStop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Stop"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button_selector"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- Battery Exemption Button (Centered, Below Start/Stop) -->
    <Button
        android:id="@+id/btnBattery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnRowStartStop"
        android:layout_marginTop="16dp"
        android:text="Battery Exemption"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_button_selector"
        android:padding="12dp"/>

</RelativeLayout>
